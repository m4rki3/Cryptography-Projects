<Window x:Class="DigitalSignature.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSignature"
        mc:Ignorable="d"
        Title="DigitalSignature" Height="450" Width="500">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="66" Margin="0,285,0,0" VerticalAlignment="Top" Width="372"/>

        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Center" Height="63" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" TextChanged="MessageTextBoxTextChanged" FontSize="14"/>
        <Button x:Name="GetSignatureButton" Content="Получить электронно-цифровую подпись" HorizontalAlignment="Center" Height="61" VerticalAlignment="Center" Width="290" Click="GetSignatureButtonClick" FontSize="14" IsEnabled="False"/>
        <TextBlock x:Name="SignatureTextBlock" HorizontalAlignment="Center" Height="66" Margin="0,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" FontSize="14"/>

    </Grid>
</Window>
